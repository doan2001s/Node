<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="description" content="" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
  <!-- Title  -->
  <title>Shop</title>

  <!-- Favicon  -->
  <!-- <link rel="icon" href="/public/img/core-img/favicon.ico" /> -->

  <!-- Core Style CSS -->
  <link rel="stylesheet" type="text/css" href="/public/css/core-style.css" />
  <link rel="stylesheet" type="text/css" href="/public/css/style.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">
  <link rel="stylesheet" type="text/css" href="/public/css/custom-Index.css">
  <link rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/@splidejs/splide@4.0.1/dist/css/themes/splide-skyblue.min.css" />
  <script type="text/javascript"
    src="https://cdn.jsdelivr.net/npm/@splidejs/splide@4.0.1/dist/js/splide.min.js"></script>
</head>

<body>
  <!-- Search Wrapper Area Start -->
  <div class="search-wrapper section-padding-100">
    <div class="search-close">
      <i class="fa fa-close" aria-hidden="true"></i>
    </div>
    <div class="container">
      <div class="row">
        <div class="col-12">
          <div class="search-content">
            <form action="#" method="get">
              <input type="search" name="search" id="search" placeholder="Type your keyword...">
              <button type="submit"><img src="/public/img/core-img/search.png" alt=""></button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Search Wrapper Area End -->
  <header>
    <div class="header-container">
      <div class="header-container_slick">
        <div class="left-container"></div>
        <div class="center-container">
          <div class="center-container__img">
            <a href="/"><img src="/public/img/core-img/Essence_logo_in_black.png" /></a>
          </div>
        </div>
        <div class="right-container">
          <div>
            <a href="/cart" class="cart-nav pr-2"><img src="/public/img/core-img/cart.png" alt="" /><span
                style="color: #FBB933; height: 15px; width: 15px;">
                <%= customer ? customer.listProduct.length : 0 %>
              </span> </a>
            <a href="/favorite" class="fav-nav pr-2"><img src="/public/img/core-img/favorites.png" alt="" /></a>
            <a href="#" class="search-nav pr-2"><img src="/public/img/core-img/search.png" alt="" /></a>
            <!-- <a class="pr-3" href="">
                          <img src="/public/img/core-img/heart.png" />
                      </a>
                      <a class="pr-3" href="">
                          <img src="/img/core-img/shopping-bag.png" />
                      </a> -->
          </div>
        </div>
      </div>
      <div class="header-container_route">
        <div class="header-container-box">
          <div class="sub-menu">
            <a class="a-submenu-tap" href="/">Trang chủ</a>
            <div class="sub-menu-nav">
              <button class="nav-btn">
                <a style="float: none; min-width: none;" href="/product">Trang sức</a>
              </button>
              <div class="sub-menu-alt">
                <div class="sub-menu-get">
                  <a class="a-submenu" href="#">Dây chuyền</a>
                  <a class="a-submenu" href="#">Hoa tai</a>
                  <a class="a-submenu" href="#">Nhẫn</a>
                  <a class="a-submenu" href="#">Vòng tay</a>
                  <a class="a-submenu" href="#">Trang trí</a>
                </div>
              </div>
            </div>
            <a class="a-submenu-tap" href="#">Nước hoa</a>
            <a class="a-submenu-tap" href="contact">Liên hệ</a>
            <a class="a-submenu-tap" href="blog">Blog</a>
          </div>
        </div>
      </div>
    </div>
  </header>
  <div>
    <div class="cart-table-area section-padding-100">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12 col-lg-12">
            <div class="checkout_details_area mt-50 clearfix">

              <div class="cart-title">
                <h2>Thanh toán</h2>
              </div>
              <hr class="divider" />
              <form action="" method="">
                <div class="row">
                  <div class="col-md-6 mb-3">
                    <input type="text" readonly name="firstName" class="form-control" id="first_name"
                      value="<%= customer.fullNameCustomer.firstName %>" placeholder="Họ" required>
                  </div>
                  <div class="col-md-6 mb-3">
                    <input type="text" readonly name="lastName" class="form-control" id="last_name"
                      value="<%= customer.fullNameCustomer.lastName %>" placeholder="Tên" required>
                  </div>
                  <div class="col-12 mb-3">
                    <input type="email" readonly name="email" class="form-control" id="email" placeholder="Email"
                      value="<%= customer.email %>" required>
                  </div>
                  <div class="col-md-12 mb-3">
                    <input type="tel" readonly name="phone" class="form-control" id="phone_number"
                      placeholder="Số điện thoại" value="<%= customer.phoneNumber%>" required>
                  </div>
                  <div style="display: flex; justify-content: space-evenly; align-items: center; padding: 0 15px;">
                    <div id="divCity">
                      <select name="city"
                        style="height: 60px;text-indent: 30px; color: #6b6b6b; background-color: #F5F7FA; border: none; outline: none; width: 300px;"
                        class="form-select form-select-sm mr-5 my-3" id="city" aria-label=".form-select-sm">
                        <option value="none" selected>Chọn tỉnh thành</option>
                      </select>
                    </div>
                    <div id="divDistrict">
                      <select name="district"
                        style="height: 60px;text-indent: 30px; color: #6b6b6b; background-color: #F5F7FA; border: none; outline: none; width: 300px;"
                        class="form-select form-select-sm mr-5 my-3" id="district" aria-label=".form-select-sm">
                        <option value="none" selected>Chọn quận huyện</option>
                      </select>
                    </div>
                    <div id="divWard">
                      <select name="ward"
                        style="height: 60px;text-indent: 30px; color: #6b6b6b; background-color: #F5F7FA; border: none; outline: none; width: 300px;"
                        class="form-select form-select-sm my-3" id="ward" aria-label=".form-select-sm">
                        <option value="none" selected>Chọn phường xã</option>
                      </select>
                    </div>
                  </div>
                  <div class="col-12 mb-3">
                    <input type="text" name="address" class="form-control my-3" id="street_address"
                      placeholder="Địa chỉ" value="" required>
                  </div>
                  <div class="col-12 mb-3">
                    <textarea name="comment" class="form-control w-100" id="comment" cols="30" rows="10"
                      placeholder="Lưu ý/Yêu cầu đối với đơn hàng của bạn"></textarea>
                  </div>
                  <div style="display: flex;width: 100%;justify-content: center;">
                    <div style="display: flex; flex-direction: column; padding: 30px;width: max-content;">
                      <div style="display: flex;" class="mb-3">
                        <div class="custom-control custom-checkbox mr-sm-2">
                          <input type="radio" value="1" name="payment" class="custom-control-input" id="cod" checked>
                          <label class="custom-control-label" for="cod">Thanh toán khi nhận hàng</label>
                        </div>
                        <!-- Paypal -->
                        <!-- <div class="custom-control custom-checkbox mr-sm-2 ml-3">
                          <input type="radio" value="2" name="payment" class="custom-control-input" id="paypal">
                          <label class="custom-control-label" for="paypal">Paypal <img class="ml-15"
                              src="/public/img/core-img/paypal.png" alt=""></label>
                        </div> -->
                      </div>
                      <button type="submit" class="btn amado-btn">Thanh toán</button>
                    </div>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- ##### Footer Area Start ##### -->
  <footer class="footer_area clearfix">
    <div class="container">
      <div class="row">
        <!-- Single Widget Area -->
        <div class="col-12 col-md-6">
          <div class="single_widget_area d-flex mb-30">
            <!-- Logo -->
            <div class="footer-logo mr-50">
              <a href="#"><img src="img/core-img/logo2.png" alt=""></a>
            </div>
            <!-- Footer Menu -->
            <div class="footer_menu">
              <ul>
                <li><a href="shop.html">Shop</a></li>
                <li><a href="blog.html">Blog</a></li>
                <li><a href="contact.html">Contact</a></li>
              </ul>
            </div>
          </div>
        </div>
        <!-- Single Widget Area -->
      </div>

      <div class="row align-items-end">
        <!-- Single Widget Area -->
        <!-- <div class="col-12 col-md-6">
                <div class="single_widget_area">
                    <div class="footer_heading mb-30">
                        <h6>Subscribe</h6>
                    </div>
                    <div class="subscribtion_form">
                        <form action="#" method="post">
                            <input type="email" name="mail" class="mail" placeholder="Your email here">
                            <button type="submit" class="submit"><i class="fa fa-long-arrow-right"
                                    aria-hidden="true"></i></button>
                        </form>
                    </div>
                </div>
            </div> -->
        <!-- Single Widget Area -->
        <div class="col-12 col-md-6">
          <div class="single_widget_area">
            <div class="footer_social_area">
              <a href="#" data-toggle="tooltip" data-placement="top" title="Facebook"><i class="fa fa-facebook"
                  aria-hidden="true"></i></a>
              <a href="#" data-toggle="tooltip" data-placement="top" title="Instagram"><i class="fa fa-instagram"
                  aria-hidden="true"></i></a>
              <a href="#" data-toggle="tooltip" data-placement="top" title="Twitter"><i class="fa fa-twitter"
                  aria-hidden="true"></i></a>
              <a href="#" data-toggle="tooltip" data-placement="top" title="Pinterest"><i class="fa fa-pinterest"
                  aria-hidden="true"></i></a>
              <a href="#" data-toggle="tooltip" data-placement="top" title="Youtube"><i class="fa fa-youtube-play"
                  aria-hidden="true"></i></a>
            </div>
          </div>
        </div>
      </div>
      <div class="row mt-5">
      </div>
    </div>
  </footer>
  <!-- ##### Footer Area End ##### -->

  <!-- ##### jQuery (Necessary for All JavaScript Plugins) ##### -->
  <script src="/public/js/jquery/jquery-2.2.4.min.js"></script>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.21.1/axios.min.js"></script>
  <!-- Popper js -->
  <script src="/public/js/popper.min.js"></script>
  <!-- Bootstrap js -->
  <script src="/public/js/bootstrap.min.js"></script>
  <!-- Plugins js -->
  <script src="/public/js/plugins.js"></script>

  <script src="/public/js/address.js"></script>
  <!-- Active js -->
  <script src="/public/js/active.js"></script>
  <script>
    $(document).ready(function () {
      $('#divCity').children().last().remove();
      $('#divDistrict').children().last().remove();
      $('#divWard').children().last().remove();
      $('#city').show();
      $('#district').show();
      $('#ward').show();
    });
  </script>
</body>

</html>